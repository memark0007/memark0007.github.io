{
  "name": "portfolio-glassmorphism",
  "version": "1.0.0",
  "description": "Software Engineer portfolio with Glassmorphism design",
  "scripts": {
    "build:css": "npx tailwindcss -i ./assets/css/style.css -o ./assets/css/tailwind.output.css",
    "watch:css": "npx tailwindcss -i ./assets/css/style.css -o ./assets/css/tailwind.output.css --watch",
    "build": "npm run build:css",
    "dev": "npm run watch:css"
