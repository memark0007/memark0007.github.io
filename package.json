  "keywords": [
    "portfolio",
    "software engineer",
    "glassmorphism",
    "github pages"
  ],
  "author": "KITTISAK LAMNOI",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  }
}
